{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node" // Or "bundler"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
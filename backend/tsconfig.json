{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node", // Or "bundler"
    "resolveJsonModule": true,
    "baseUrl": ".", // Important for path aliases

  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}